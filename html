<body>
    <div id="countdown-container">
        <img src="your-image.jpg" alt="Image" id="main-image">
        <h1>Welcome to the Countdown Page!</h1>
        <p id="countdown"></p>
        <p>What are you waiting for?</p>
        <div class="choices">
            <button class="choice-button">Something exciting!</button>
            <button class="choice-button">A great event!</button>
            <button class="choice-button">The big day!</button>
        </div>
    </div>

    <script>
        // Countdown Timer Script
        const countdownDate = new Date("Apr 24, 2025 00:00:00").getTime();

        const countdownFunction = setInterval(function() {
            const now = new Date().getTime();
            const distance = countdownDate - now;

            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            document.getElementById("countdown").innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;

            if (distance < 0) {
                clearInterval(countdownFunction);
                document.getElementById("countdown").innerHTML = "EXPIRED";
            }
        }, 1000);

        // Multiple Choice Buttons (all correct)
        const buttons = document.querySelectorAll('.choice-button');
        buttons.forEach(button => {
            button.addEventListener('click', () => {
                alert("Correct!");
            });
        });
    </script>
</body>
